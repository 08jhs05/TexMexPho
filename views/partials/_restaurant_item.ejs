<article class="new-order-items">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">ORDER #: <%= newOrder[0]['order_id'] %></h5>
      <hr>
      <ul>
        <% let sum=0 %>
          <% for (let obj of newOrder) { %>
            <% sum+=obj['price']*obj['quantity'] %>
              <li>
                <%= obj['name'] %> x <%= obj['quantity'] %>
              </li>
              <% } %>

      </ul>
      <p class="card-text"></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><b>TOTAL: </b>
        $<%=(newOrder[0]['final_price']/100).toFixed(2) %>
      </li>
    </ul>
    <div class="card-body">
    <form action="/restaurant" method="POST">
      <textarea hidden class="sms-post" name="order_to_delete"><%=newOrder[0]['order_id'] %></textarea>
      <textarea hidden class="derp" name="phone"><%=newOrder[0]['phone'] %></textarea>

      <textarea class="sms-post" name="sms_customer" placeholder="Type SMS to customer and click send">Your TexMexPho order# <%=newOrder[0]['order_id'] %> is ready for pickup!</textarea>
      <button type="submit" name="accept" class="btn btn-success">SEND</button>
      <!-- <button type="submit" name="reject" class="btn btn-danger">REJECT</button> -->
    </form>
    </div>
  </div>
</article>